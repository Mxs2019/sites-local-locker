{{define "location.url" -}}
{{.externalEntityId}}
{{- end}}
{{define "location.source" -}}
<html>
<head>
{{ template "scripts" }}
<title>{{.name}} {{if .geomodifer}}{{ .geomodifer }}{{else}}{{.address.city}}{{end}}</title>
</head>
    <body>
      <div>{{template "header"}}</div>
      <div class="flex">
      <div class="w-12 bg-ll-red"></div>
      <div class="container w-full">
        <div class="border-b pb-2 mb-6">
          <a href="/" class="flex items-center">
            <div><svg width="6" height="11" viewBox="0 0 6 11" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M.117 5.14a.337.337 0 000 .499l4.307 4.336c.117.146.351.146.498 0l.557-.586a.337.337 0 000-.498L2.02 5.375 5.48 1.889c.146-.147.146-.381 0-.498L4.922.805c-.147-.147-.381-.147-.498 0L.117 5.14z" fill="#00173C"></path></svg></div>
            <div class="">&nbsp;Back</div>
          </a>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div>
              <h1>{{.name}} {{if .geomodifer}}{{ .geomodifer }}{{else}}{{.address.city}}{{end}}</h1>
              <div class="mb-4">
                <h3>Address:</h3>
                <p>{{.address.line1}}, {{.address.city}}, {{.address.region}} {{.address.postalCode}}</p>        
              </div>
              {{if .description }}
                <div class="mb-4">
                  <h3>Details:</h3>
                  <p>{{.description}}</p>        
                </div>
              {{end}}
              <div class="mb-4">
                <h3>Hours:</h3>        
                <p>
                  {{ range $key, $value := .hours }}
                      <li><strong>{{ $key }}</strong>: {{ $value.openIntervals }}</li>
                  {{ end }}
                </p>
              </div>
            </div>   
            <div>Photos</div>
          </div>
        </div>
        </div>
    </body>
</html>
{{end}}