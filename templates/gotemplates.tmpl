
{{define "location.url" -}}
{{.externalEntityId}}-{{.locale}}.html
{{- end}}


{{define "location.source" -}}
<html>
    <body>
        <h1> Welcome to Luc's Electronics - {{.name}}</h1>
        <p>{{.address}}</p>
        <p>Hours: {{.hours}}</p>
    </body>
</html>
{{end}}

{{define "product.url" -}}
{{.externalEntityId}}-{{.locale}}.html
{{- end}}


{{define "product.source" -}}
<html>
    <body>
        <h1>{{.name}}</h1>
        <p>SKU: {{.sku}}</p>
        <p>{{.richTextDescription}}</p>
        <div>
            <span>{{.size}}</span>
            <span>{{.price}}</span>
        </div>
    </body>
</html>
{{end}}


{{define "faq.url" -}}
{{.externalEntityId}}-{{.locale}}.html
{{- end}}


{{define "faq.source" -}}
<html>
    <body>
        <h1>{{.name}}</h1>
        <p>{{.answer}}</p>
    </body>
</html>
{{end}}


{{define "event.url" -}}
{{.externalEntityId}}-{{.locale}}.html
{{- end}}


{{define "event.source" -}}
<html>
    <body>
        <h1>{{.name}}</h1>
        <h2>{{.time}}</h2>
        <h3>{{.linkedLocation}}</h3>
        <div>
            {{.description}}
        </div>
        <p>{{.isFreeEvent}}</p>
    </body>
</html>
{{end}}